#!/bin/sh

# Starta VPN (BSD/OSX)
vpn()
{
  if [ "$1" == "start" ]; then
    echo -e "Connecting to \033[0;31m$VPN\033[0m..."
      scutil --nc start "$VPN"
  else
    echo -e "Disconnecting from \033[0;31m$VPN\033[0m..."
      scutil --nc stop "$VPN"
      fi
}

mail()
{
  ICLOUD_LOGIN="$(sudo security find-generic-password -s icloud-mutt -w)"
  mutt "$@"
}
