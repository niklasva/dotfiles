# destroy desktop
cmd + ralt - w : yabai -m space --destroy

# fast focus desktop
cmd + ralt - x : yabai -m space --focus last
cmd + ralt - z : yabai -m space --focus prev
cmd + ralt - c : yabai -m space --focus next
cmd + ralt - 1 : yabai -m space --focus 1
cmd + ralt - 2 : yabai -m space --focus 2
cmd + ralt - 3 : yabai -m space --focus 3
cmd + ralt - 4 : yabai -m space --focus 4
cmd + ralt - 5 : yabai -m space --focus 5
cmd + ralt - 6 : yabai -m space --focus 6
cmd + ralt - 7 : yabai -m space --focus 7
cmd + ralt - 8 : yabai -m space --focus 8
cmd + ralt - 9 : yabai -m space --focus 9
cmd + ralt - 0 : yabai -m space --focus 10

