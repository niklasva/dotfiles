# focus monitor
ctrl + lalt - x  : yabai -m display --focus last
ctrl + lalt - z  : yabai -m display --focus prev
ctrl + lalt - c  : yabai -m display --focus next
ctrl + lalt - 1  : yabai -m display --focus 1
ctrl + lalt - 2  : yabai -m display --focus 2
ctrl + lalt - 3  : yabai -m display --focus 3

# send window to monitor and follow focus
ctrl + cmd - x  : yabai -m window --display last; yabai -m display --focus last
ctrl + cmd - z  : yabai -m window --display prev; yabai -m display --focus prev
ctrl + cmd - c  : yabai -m window --display next; yabai -m display --focus next
ctrl + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1
ctrl + cmd - 2  : yabai -m window --display 2; yabai -m display --focus 2
ctrl + cmd - 3  : yabai -m window --display 3; yabai -m display --focus 3

# move window
lalt + ctrl - a : yabai -m window --move -20:0
lalt + ctrl - s : yabai -m window --move 0:20
lalt + ctrl - w : yabai -m window --move 0:-20
lalt + ctrl - d : yabai -m window --move 20:0

# increase window size
# shift + lalt - h : yabai -m window --resize left:-59:0
# shift + lalt - j : yabai -m window --resize bottom:0:60
# shift + lalt - k : yabai -m window --resize top:0:-60
# shift + lalt - l : yabai -m window --resize right:60:0
# 
# # decrease window size
# shift + cmd - a : yabai -m window --resize left:60:0
# shift + cmd - s : yabai -m window --resize bottom:0:-60
# shift + cmd - w : yabai -m window --resize top:0:20
# shift + cmd - d : yabai -m window --resize right:-60:0

shift + lalt - h : yabai -m window --resize left:-100:0; \
                   yabai -m window --resize right:-100:0
shift + lalt - j : yabai -m window --resize bottom:0:100; \
                   yabai -m window --resize top:0:100
shift + lalt - k : yabai -m window --resize top:0:-100; \
                   yabai -m window --resize bottom:0:-100
shift + lalt - l : yabai -m window --resize right:100:0; \
                   yabai -m window --resize left:100:0

# set insertion point in focused container
shift + ctrl + alt - h : yabai -m window --insert west
shift + ctrl + alt - j : yabai -m window --insert south
shift + ctrl + alt - k : yabai -m window --insert north
shift + ctrl + alt - l : yabai -m window --insert east
shift + ctrl + alt - i : yabai -m window --insert stack

# rotate tree
lalt - r : yabai -m space --rotate 90

# mirror tree y-axis
lalt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
lalt - x : yabai -m space --mirror x-axis

# toggle desktop offset
lalt - a : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window fullscreen
lalt - f : yabai -m window --toggle fullscreen

# toggle window native fullscreen
shift + lalt - f : yabai -m window --toggle native-fullscreen

# toggle window border
shift + lalt - b : yabai -m window --toggle border

# toggle window split type
lalt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
lalt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle sticky
lalt - s : yabai -m window --toggle sticky

# toggle sticky, float and resize to picture-in-picture size
lalt - 0x2F : yabai -m window --toggle sticky;\
              yabai -m window --grid 5:5:4:0:1:1

# change layout of desktop
ctrl + lalt - a : yabai -m space --layout bsp
ctrl + lalt - d : yabai -m space --layout float


lalt - n : yabai -m window --focus stack.next
lalt - p : yabai -m window --focus stack.prev


