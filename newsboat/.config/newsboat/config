
# general settings
reload-threads      4
show-read-articles  yes
max-items           30

#auto-reload yes

# external browser
browser "readable-browser %u"
macro f set browser "open /Applications/Firefox.app %u"; open-in-browser-and-mark-read ; set browser "readable-browser %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key L open-in-browser-and-mark-read

# color                  fg        bg
color background         default   default
color listnormal         color20   default
color listnormal_unread  color4    default
color listfocus          default   default reverse
#color listfocus          color20   color18
color listfocus_unread   default    default reverse
#color listfocus_unread   color4    color18
color info               color20   color18
color article            default   default

show-keymap-hint no

#feedlist-format             "%4i %n %-15T %t %S %> %3U "
feedlist-format             "%3i  %-35t %S %> (%U unread) "
#feedlist-title-format       ""
articlelist-format          "%3i  %D %f %?T?|%-17T|  ?%t"
articlelist-title-format    "%T (%u unread)"
notify-format               "%d new articles (%n unread articles, %f unread feeds)"
podlist-format              "%4i [%-5p %%] %-12S %F"
datetime-format             "%a %d %b %H:%M"
itemview-title-format       "%T %> %F"

#highlight feedlist "\\ 0" black black invis
highlight feedlist "---.*" black black invis
highlight feedlist "^.{4}" color8 color18
highlight articlelist "^.{21}" color8 default
highlight articlelist "^.{4}" color8 color18
highlight feedlist "----.*----" color9 default bold

pager "nl -w3 -b'n' %f | less"
#pager "readable-browser -f %f"
html-renderer "readable -q | w3m -T text/html -dump"


