" vi-kommandon från .exrc:
set showmode
set number
set dir=/home/niva/.tmpdir
set ai
set ic

map Q :q!
map QQ :q!<CR>

" viminställningar
set nocompatible
set tabstop=2
set shiftwidth=2
set expandtab

""" Färger """
"" 0 = grå
"" 1 = blå
"" 2 = grön
"" 3 = turkos
"" 4 = röd
"" 5 = lila
"" 6 = gul
"" 7 = vit
"" 8 = svart
""""""""""""""

highlight LineNr ctermfg=2


nnoremap U <c-r>

